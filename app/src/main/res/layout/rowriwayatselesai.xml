<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:padding="12sp"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/iv_gambar_resep_selesai"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_resep_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEP"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_gambar_resep_selesai"
            android:layout_toEndOf="@+id/iv_gambar_resep_selesai"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/tv_invoice_resep_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_resep_selesai"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/iv_gambar_resep_selesai"
            android:text="#"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_nama_penerima_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_toEndOf="@+id/iv_gambar_resep_selesai"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/tv_invoice_resep_selesai"/>

        <TextView
            android:id="@+id/tv_statusnya_resep_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_gambar_resep_selesai"
            android:layout_toEndOf="@+id/iv_gambar_resep_selesai"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/tv_nama_penerima_selesai"/>

        <TextView
            android:id="@+id/tv_waktu_selesai_resep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_statusnya_resep_selesai"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/iv_gambar_resep_selesai"
            android:text="Waktu"
            android:textColor="#000000"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_waktu_selesai_resep"
            android:layout_toRightOf="@+id/iv_gambar_resep_selesai"
            android:layout_toEndOf="@+id/iv_gambar_resep_selesai"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tv_total_byr_resep_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_marginLeft="2dp"
                android:textColor="#000000"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_lihat_detail_resep_selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:gravity="end"
            android:text="LIHAT DETAIL"
            android:textColor="#ED5454"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>