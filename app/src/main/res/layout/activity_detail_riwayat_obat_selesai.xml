                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_nominal_subtotal_riwayat_obat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_nominal_biaya_pengiriman_riwayat_obat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 35.000,00"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_nominal_total_riwayat_obat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f0f0f0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="2.8">

                    <TextView
                        android:id="@+id/tv_waktu_pesan_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Waktu Pemesanan"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_waktu_bayar_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="8dp"
                        android:text="Waktu Pembayaran"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_waktu_kirim_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu Pengiriman"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/tv_waktu_pemesanan_riwayat_obat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="0"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_waktu_pembayaran_riwayat_obat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_waktu_pengiriman_riwayat_oabat_selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

            </LinearLayout>

