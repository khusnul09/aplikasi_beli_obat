<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".GantiPasswordBaruFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:boxStrokeColor="@color/color1"
        app:hintTextAppearance="@style/TextLabel"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_password_baru"
            android:hint="Masukkan Password Baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C62525"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_password_baru_lagi"
        android:layout_below="@id/til_password_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:boxStrokeColor="@color/color1"
        app:hintTextAppearance="@style/TextLabel"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_password_baru_lagi"
            android:hint="Ulangi Password Baru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C62525"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_ganti_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_button"
        android:text="Ganti Password"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>