<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    android:background="#fff"
    tools:context="com.example.mynotes.AnotherActivity">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/harga_desc"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageView">

        <TextView
            android:id="@+id/tv_rp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textSize="12dp"
            android:textColor="#ED5454" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="12dp"
            android:textColor="#ED5454" />

        <TextView
            android:id="@+id/tv_garing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_harga_obat"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:text="/ "
            android:textColor="#ED5454"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_satuan_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_garing"
            android:gravity="center"
            android:text="ampul"
            android:textColor="#ED5454"
            android:textSize="12sp"/>

    </LinearLayout>

