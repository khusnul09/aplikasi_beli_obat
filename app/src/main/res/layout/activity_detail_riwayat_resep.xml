                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/datapasien"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="Data Penerima"
                    android:textStyle="bold"
                    android:textColor="#ED5454"
                    android:textSize="18sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_lb_nama_riwayat_selesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="Nama Lengkap"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_nama_riwayat_resep_belum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="2dp"
                        android:text="Khusnul Khatima"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_lb_tlf_riwayat_selesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="Nomor Handphone"
                        android:textSize="14sp"
                        android:layout_marginTop="7dp"/>

                    <TextView
                        android:id="@+id/tv_hp_riwayat_resep_belum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="2dp"
                        android:text="085255513984"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_lb_alamat_riwayat_selesai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="Alamat"
                        android:textSize="14sp"
                        android:layout_marginTop="7dp"/>

                    <TextView
                        android:id="@+id/tv_alamat_riwayat_resep_belum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="2dp"
                        android:text="Perumahan Griya Mawang Indah Blok A2"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
