            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="12sp">

                <Button
                    android:id="@+id/btn_info_rek_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BAYAR"
