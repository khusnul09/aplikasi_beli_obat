<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageIv"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/priceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_below="@id/imageIv"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:textSize="12sp"
                android:layout_marginRight="1dp"
                android:textColor="#ED5454"/>

            <TextView
                android:id="@+id/tv_harga_obat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_rp"
                android:layout_marginRight="1dp"
                android:gravity="center"
                android:text="10.000"
                android:textColor="#ED5454"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_garing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_harga_obat"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:text="/"
                android:textColor="#ED5454"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_satuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_garing"
                android:gravity="center"
                android:text="ampul"
                android:textColor="#ED5454"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:id="@+id/titleTv"
            android:text="Title"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@id/priceLayout"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/titleTv"
            android:gravity="center">

            <Button
                android:id="@+id/kurang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:theme="@style/ButtonRow"
                android:text="-"
                android:textColor="#000" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/kurang"
                android:id="@+id/jumlah"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000"
                android:textAlignment="center"
                android:gravity="center_vertical"
                tools:ignore="RtlCompat" />

            <Button
                android:id="@+id/tambah"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/jumlah"
                android:text="+"
                android:textColor="#000"
                android:theme="@style/ButtonRow" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>